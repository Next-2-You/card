.card2 {
  height: 415rpx;
  width: 712rpx;
  margin-left: 16rpx;
  color: #e7cd9a;
  border: 1rpx solid white;
  background: no-repeat;
  background-size: 100%;
}

.card2 .ct-head {
  margin-top: 53rpx;
  width: 100%;
  height: 102rpx;
  display: flex;
  flex-direction: row;
}

.card2 .ct-head view {
  display: flex;
  flex-direction: column;
}

.card2 .ct-head image {
  width: 102rpx;
  height: 102rpx;
  margin-left: 56rpx;
  margin-right: 35rpx;
  border-radius: 50%;
}

.card2 .ct-head .ct-text1 {
  display: block;
  width: 245rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  font-size: 45rpx;
  font-family: SourceHanSansCN-Medium;
  font-weight: 500;
}

.card2 .ct-head .ct-text2 {
  display: block;
  width: 245rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  font-size: 22rpx;
  font-family: SourceHanSansCN-Normal;
  font-weight: 400;
}

.card2 .ct-head .ct-text3 {
  padding-top: 65rpx;
  display: block;
  margin-left: 35rpx;
  width: 205rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  font-size: 24rpx;
  font-family: SourceHanSansCN-Medium;
  font-weight: 500;
}

.card2 .ct-foot {
  margin-top: 56rpx;
  height: 204rpx;
  display: flex;
  flex-direction: column;
}

.card2 .ct-foot view {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-bottom: 10rpx;
}

.card2 .ct-foot image {
  margin-left: 196rpx;
  width: 20rpx;
  height: 20rpx;
}

.card2 .ct-foot text {
  display: inline-block;
  width: 360rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  margin-left: 15rpx;
  font-size: 20rpx;
  font-family: SourceHanSansCN-Normal;
  font-weight: 400;

}

/* 小标签 */

.label {
  height: 108rpx;
  width: 108rpx;
  position: absolute;
  margin-left: 16rpx;
  margin-top: 20rpx;
  overflow: hidden;
}

.label .text {
  height: 28rpx;
  width: 130rpx;
  margin-top: 24rpx;
  margin-left: -27rpx;
  background-color: black;
  text-align: center;
  font-size: 22rpx;
  font-family: SourceHanSansCN-Regular;
  font-weight: 400;
  color: rgba(231, 205, 154, 1);
  line-height: 26rpx;
  transform: rotate(-45deg);
  
}